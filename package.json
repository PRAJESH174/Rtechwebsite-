{
  "name": "rtech-solutions",
  "version": "1.0.0",
  "description": "RTech Solutions - Microsoft Dynamics 365, Power Platform & Azure Training Platform",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "NODE_ENV=development nodemon app.js",
    "prod": "NODE_ENV=production node app.js",
    "build": "npm run minify:css && npm run minify:js",
    "build:prod": "npm run build && npm run generate:sitemap",
    "minify:css": "cleancss -o ./public/css/styles.min.css ./public/css/styles.css",
    "minify:js": "terser ./public/js/app.js -o ./public/js/app.min.js --compress --mangle",
    "generate:sitemap": "node scripts/generate-sitemap.js",
    "generate:robots": "node scripts/generate-robots.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:performance": "lighthouse https://www.rTechLearners.com --output-path=./reports/lighthouse.json",
    "test:security": "snyk test",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "security:check": "npm audit && snyk test",
    "security:fix": "npm audit fix && snyk fix",
    "db:migrate": "node scripts/migrate-db.js",
    "db:seed": "node scripts/seed-db.js",
    "db:backup": "node scripts/backup-db.js",
    "db:restore": "node scripts/restore-db.js",
    "db:create-indexes": "node scripts/create-indexes.js",
    "backup:full": "node scripts/full-backup.sh",
    "backup:incremental": "node scripts/incremental-backup.sh",
    "seo:check": "node scripts/seo-check.js",
    "seo:submit-sitemap": "node scripts/submit-sitemap.js",
    "deploy": "node scripts/deploy.js",
    "deploy:prod": "npm run build:prod && node scripts/deploy-prod.js",
    "deploy:staging": "npm run build && node scripts/deploy-staging.js",
    "health:check": "node scripts/health-check.js",
    "logs": "tail -f logs/app.log",
    "logs:errors": "grep ERROR logs/app.log | tail -50"
  },
  "keywords": [
    "dynamics365",
    "power-platform",
    "azure",
    "microsoft365",
    "training",
    "online-courses",
    "consulting",
    "cloud-training"
  ],
  "author": "RTech Solutions",
  "license": "MIT",
  "dependencies": {
    "mongoose": "^7.3.1",
    "redis": "^4.6.7",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "nodemailer": "^6.9.0",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.0",
    "validator": "^13.11.0",
    "express-rate-limit": "^6.0.0",
    "hpp": "^0.2.3",
    "morgan": "^1.10.0",
    "axios": "^1.4.0",
    "compression": "^1.7.4",
    "helmet": "^7.0.0",
    "express-async-errors": "^3.1.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.50.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PRAJESH174/Rtechwebsite-.git"
  },
  "bugs": {
    "url": "https://github.com/PRAJESH174/Rtechwebsite-/issues"
  },
  "homepage": "https://www.rTechLearners.com"
}
