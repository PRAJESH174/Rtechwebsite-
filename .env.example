# RTech Solutions Environment Configuration
# Copy this file to .env and fill in your actual values

# Production Environment
NODE_ENV=production
DOMAIN=rTechLearners.com
HTTPS=true
SSL_CERT_PATH=/path/to/ssl/cert
SSL_KEY_PATH=/path/to/ssl/key

# Database Configuration
DB_HOST=localhost
DB_PORT=27017
DB_NAME=rtech_solutions
DB_USER=rtech_user
DB_PASSWORD=your_secure_password

# MongoDB Connection
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/rtech_solutions

# PostgreSQL Connection (Alternative)
POSTGRES_URL=postgresql://user:password@localhost:5432/rtech_solutions

# API Keys and Secrets
API_KEY=your_api_key_here
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_key

# Email Service Configuration
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@rtechlearners.com

# Payment Gateway Configuration
STRIPE_PUBLIC_KEY=pk_live_your_key
STRIPE_SECRET_KEY=sk_live_your_key
RAZORPAY_KEY_ID=your_key_id
RAZORPAY_SECRET=your_secret

# Google Services
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
GOOGLE_SEARCH_CONSOLE_TOKEN=your_token
GOOGLE_MAPS_API_KEY=your_api_key

# CDN Configuration
CDN_URL=https://cdn.rTechLearners.com
CDN_BUCKET=rtech-solutions-cdn
AWS_ACCESS_KEY_ID=your_key
AWS_SECRET_ACCESS_KEY=your_secret
AWS_REGION=us-east-1

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/rtech-solutions.log

# Security
CORS_ORIGIN=https://rTechLearners.com
CSRF_TOKEN_LENGTH=32

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=should_be_set_via_password_manager

# Social Media Configuration
TWITTER_API_KEY=your_key
FACEBOOK_APP_ID=your_app_id
LINKEDIN_API_KEY=your_key
INSTAGRAM_ACCESS_TOKEN=your_token
YOUTUBE_API_KEY=your_key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
